<resources>
    <!-- Base application theme. -->
    <style name="Theme.WakeOnLan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorDark</item>
        <item name="colorSecondaryVariant">@color/secondaryVariantDarkColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.WakeOnLan.NoDrawerActivity" parent="Theme.WakeOnLan">
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
    </style>

    <style name="Theme.WakeOnLan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FontMonospaced">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Theme.WakeOnLan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.WakeOnLan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>